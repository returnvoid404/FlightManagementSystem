@model CreateRoleViewModel

@{
    ViewBag.Title = "Create Role";
}

<div class="container mt-5">
    <div class="d-flex align-items-center my-4">
        <a asp-controller="Admin" asp-action="ListRoles" class="btn back-btn-custom me-3">← Back</a>
    </div>
    <div class="container d-flex justify-content-center align-items-center mt-5">
        <div class="card shadow p-4" style="max-width: 400px; width: 100%; border-radius: 10px;">
            <h3 class="text-center mb-4">Create Role</h3>

            <form asp-controller="Admin" asp-action="CreateRole" method="post" novalidate>
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger mb-3 text-center"></div>

                <div class="form-group mb-3">
                    <label asp-for="RoleName" class="form-label"></label>
                    <input asp-for="RoleName" class="form-control register-input" placeholder="Enter role name" />
                    <span asp-validation-for="RoleName" class="text-danger small"></span>
                </div>
            <div class="text-center mt-3">
                <button type="submit" class="btn btn-custom-primary btn-lg">Create Role</button>
            </div>
            </form>

        </div>
    </div>
</div>