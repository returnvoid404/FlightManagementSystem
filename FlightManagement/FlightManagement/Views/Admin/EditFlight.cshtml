@model EditFlightViewModel
@{
    ViewBag.Title = "Edit Flight";
}
<div class="container mt-5">
    <div class="d-flex align-items-center my-4">
        <a asp-controller="admin" asp-action="Index" class="btn back-btn-custom me-3">← Back</a>
        <h3 class="mb-0 mx-auto">Edit Flight</h3>
    </div>
    <div class="create-flight-container">
        <form asp-controller="Admin" asp-action="EditFlight" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="FlightId" />
        <div class="form-group">
            <label asp-for="FlightNumber"></label>
            <input asp-for="FlightNumber" class="custom-input" />
            <span asp-validation-for="FlightNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="OriginAirportId">Origin Airport</label>
            <select asp-for="OriginAirportId" class="custom-input" asp-items="@(new SelectList(ViewBag.Airports, "AirportId", "AirportName"))">
                <option value="">Select Airport</option>
            </select>
            <span asp-validation-for="OriginAirportId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DestinationAirportId">Destination Airport</label>
            <select asp-for="DestinationAirportId" class="custom-input" asp-items="@(new SelectList(ViewBag.Airports, "AirportId", "AirportName"))">
                <option value="">Select Airport</option>
            </select>
            <span asp-validation-for="DestinationAirportId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AircraftId">Aircraft</label>
            <select asp-for="AircraftId" class="custom-input" asp-items="@(new SelectList(ViewBag.Aircrafts, "AircraftId", "Model"))">
                <option value="">Select Aircraft</option>
            </select>
            <span asp-validation-for="AircraftId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DepartureTime"></label>
            <input asp-for="DepartureTime" type="datetime-local" class="custom-input" />
            <span asp-validation-for="DepartureTime" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ArrivalTime"></label>
            <input asp-for="ArrivalTime" type="datetime-local" class="custom-input" />
            <span asp-validation-for="ArrivalTime" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="custom-input" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Status">Flight Status</label>
            <select asp-for="Status" class="custom-input" asp-items="@(new SelectList(ViewBag.StatusOptions))">
                <option value="">Select Status</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="d-flex align-items-center my-4">
        <button type="submit" class="btn btn-custom-primary mx-auto">Update</button>
        </div>
    </form>
    </div>
</div>