@model EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}
<div class="container mt-5">
    <div class="d-flex align-items-center my-4">
        <a asp-controller="Admin" asp-action="Index" class="btn back-btn-custom me-3">← Back</a>
        <h3 class="mb-0 mx-auto">Edit Role</h3>
    </div>
    <div>
        <form asp-action="EditRole" asp-controller="admin" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group row mb-2">
                <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Id" disabled class="form-control register-input" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="RoleName" class="form-control register-input" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>


            <div class="form-group row mb-2">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-custom-primary">Update</button>
                    <a asp-action="ListRoles" class="btn btn-custom-secondary">Cancel</a>
                </div>
            </div>


            <div class="card ">
                <div class="card-header">
                    <h3>Users in this role</h3>
                </div>
                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <h5 class="card-title">@user</h5>
                        }
                    }
                    else
                    {
                        <h5 class="card-title">None at the moment</h5>

                    }
                </div>
                <div class="card-footer">
                    <a asp-action="EditUsersInRole" asp-controller="Admin" asp-route-roleId="@Model.Id" class="btn btn-custom-primary">Add or remove users</a>
                </div>
            </div>



        </form>
    </div>
</div>