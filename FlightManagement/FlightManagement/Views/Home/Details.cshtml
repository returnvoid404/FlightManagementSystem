@model FlightDetailsViewModel
@{
    ViewBag.Title = "Flight Details";
}
<div class="container mt-5">
    <div class="d-flex align-items-center my-4">
        <a asp-controller="Home" asp-action="Index" class="btn back-btn-custom me-3">← Back</a>
        <h3 class="mb-0 mx-auto">Flight Details</h3>
    </div>

    <div class="card">
        <div class="card-header text-white main-background-color">
            <h5 class="card-title mb-0 text-black">Flight Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <p><strong>Flight Number:</strong> @Model.FlightNumber</p>
                </div>
                <div class="col-md-6 mb-3">
                    <p><strong>Origin Airport:</strong> @Model.OriginAirportName</p>
                </div>
                <div class="col-md-6 mb-3">
                    <p><strong>Destination Airport:</strong> @Model.DestinationAirportName</p>
                </div>
                <div class="col-md-6 mb-3">
                    <p><strong>Departure:</strong> @Model.DepartureTime.ToString("f")</p>
                </div>
                <div class="col-md-6 mb-3">
                    <p><strong>Arrival:</strong> @Model.ArrivalTime.ToString("f")</p>
                </div>
                <div class="col-md-6 mb-3">
                    <p><strong>Aircraft:</strong> @Model.AircraftModel</p>
                </div>
                <div class="col-md-6 mb-3">
                    <p><strong>Capacity:</strong> @Model.AircraftCapacity</p>
                </div>
                <div class="col-md-6 mb-3">
                    <p><strong>Status:</strong> @Model.Status</p>
                </div>
                <div class="col-md-6 mb-3">
                    <p><strong>Price per Seat:</strong> Rs @Model.Price Tarzan</p>
                </div>
                <div class="col-md-12 mb-3">
                    <p>
                        <strong>Available Seats:</strong>
                        @Model.AvailableSeatsCount / @Model.AircraftCapacity
                    </p>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <a asp-controller="Bookings" asp-action="Create" asp-route-flightId="@Model.FlightId" class="btn btn-custom-primary text-uppercase">
                    Book Now!
                </a>
            </div>
        </div>
    </div>
</div>
