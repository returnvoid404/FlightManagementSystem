@model Booking

@{
    ViewBag.Title = "Booking Confirmation";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <div class="card-body text-center">
            <h2 class="text-success mb-4">Booking Confirmed!</h2>
            <p class="text-muted">Thank you for booking with us. Your booking details are shown below.</p>

            <hr />

            <div class="row justify-content-center mt-4">
                <div class="col-md-8">
                    <table class="table table-bordered table-striped text-start">
                        <tbody>
                            <tr>
                                <th>Booking ID</th>
                                <td>@Model.BookingId</td>
                            </tr>
                            <tr>
                                <th>Passenger Name</th>
                                <td>@Model.Passenger.FirstName @Model.Passenger.LastName</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>@Model.Passenger.Email</td>
                            </tr>
                            <tr>
                                <th>Phone</th>
                                <td>@Model.Passenger.Phone</td>
                            </tr>
                            <tr>
                                <th>Flight Number</th>
                                <td>@Model.Flight.FlightNumber</td>
                            </tr>
                            <tr>
                                <th>Aircraft</th>
                                <td>@Model.Flight.Aircraft.Manufacturer @Model.Flight.Aircraft.Model</td>
                            </tr>
                            <tr>
                                <th>Seat Number</th>
                                <td>@Model.SeatNumber</td>
                            </tr>
                            <tr>
                                <th>Booking Date</th>
                                <td>@Model.BookingDate?.ToString("dd MMM yyyy, hh:mm tt")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-custom-primary text-uppercase">Back to Home</a>
                <a asp-controller="Bookings" asp-action="MyBookings" class="btn btn-custom-secondary text-uppercase ms-2">Check all your bookings</a>
            </div>
        </div>
    </div>
</div>
