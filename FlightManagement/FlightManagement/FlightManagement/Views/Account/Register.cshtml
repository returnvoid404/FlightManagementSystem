@model FlightManagement.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "User Registration";
}

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="card shadow p-4" style="max-width: 400px; width: 100%; border-radius: 10px;">
        <h3 class="text-center mb-4">Create Your Account</h3>

        <form asp-controller="Account" asp-action="Register" method="post" novalidate>
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger mb-3 text-center"></div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control register-input" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control register-input" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control register-input" placeholder="Re-enter your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-custom-primary btn-lg">Register</button>
            </div>
        </form>

        <div class="text-center mt-3">
            <small>Already have an account? <a asp-action="login" asp-controller="account" style="text-decoration:none;color:#006D5B;text-decoration:underline;">Sign in</a></small>
        </div>
    </div>
</div>
