@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "All Roles";
}
<div class="container mt-5">
    <div class="d-flex align-items-center my-4">
        <a asp-controller="Admin" asp-action="Index" class="btn back-btn-custom me-3">← Back</a>
        <h3 class="mb-0 mx-auto">All Roles</h3>
    </div>
    <a asp-controller="Admin" asp-action="CreateRole" class="btn btn-custom-primary text-uppercase mb-2">
        Add new role +
    </a>
@if(Model.Any())
{
    foreach(var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a asp-controller="Admin" asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-custom-primary">Edit</a>
                <a href="#" class="btn btn-custom-primary bg-danger">Delete</a>
            </div>
        </div>    
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a role
            </h5>
            <a asp-controller="admin" asp-action="CreateRole" class="btn btn-custom-primary">
                Create Role
            </a>
        </div>
    </div>
}
</div>